<!DOCTYPE html>
<html>

    <head>
        <%-include('./partials/header.ejs') %>
    
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="login.css">
    </head>
    
    <body>
        <script src = "visibility.js"> </script>

        <div class = "split left">
            <%-include('./partials/logo.ejs') %>

            <div class = "text_l">
                <h1><span style="text-align: center;">Register Your Account</span> </h1><br>

                <form action = "/users" method="POST" onsubmit="return dataValidation()">  
                    
                    <div class ="button2">
                        <b>Name</b>
                        <input type="text" required = "required" placeholder="Enter your name" id="pname" name="pname" >
                        <div class = "error"><%=error_msg_name%></div> <br>

                        <b>Username</b>
                        <input type="text" required = "required" placeholder="Enter a username" id="username" name="username"><br>
                        
                        <div class = "error"><%=error_msg_username%></div>  <br>                
                        
                        <b>Email address</b>
                        <input type="mail" required = "required" placeholder="Enter your email address" id = "email" name = "email"> 
                        <br><br>
                    </div>
                    
                        <b>Password (max 8, min 4 characters, must contain a special character and a number)</b><br>
                        <input type="password" required = "required" maxlength="8" minlength="4" placeholder="Enter your password" id ="pword" name = "pword">
                        <input type="checkbox" onclick=toggleVisibility()>Show Password<br> 
                        <div class = "error"><%=error_msg_password%></div> <br>
                    
                        <b>Confirm Password</b><br>
                        <input type="password" required = "required" maxlength="8" placeholder="Enter your password again" id ="cpword" name="cpword">
                        <input type="checkbox" onclick="ctoggleVisibility()"/>Show Password<br>
                        <div class = "error"><%=error_msg_cpassword%></div><br> 
                    

                        <div class="button3">
                            <input type="submit" value="Sign Up" id ="submit" > 
                            <input type = "reset" value = "Reset" >
                        </div>
                    </form>  
            </div>
        </div>

        

        <div class = "split right">
            <button type = "button" class = "button2">
                <a href ="index.html" style="color:black;">Home</a>
            </button>
            <div class = "text_r">
                <h2>Already have an account ? </h2>
                <br>
                
                <br>
                <button type = "button" class = "button1">
                    <a href ="login.html" style="color:black;">Log in</a>
                </button>
            </div>
            
        </div>

    </body>
</html>